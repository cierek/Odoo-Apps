<!-- Thix file is responsible for editing the Customer Invoice -->
<odoo>
  <data>
    <record id="account_invoice_form_customer_force_invoice_number" model="ir.ui.view">
      <field name="inherit_id" ref="account.invoice_form"/>
      <field name="model">account.invoice</field>
      <field name="arch" type="xml">
        <field name="move_name" position="replace">
          <field name="move_name" string="Force Number" help="Use this field to set a default Invoice Number"/>
        </field>
      </field>
    </record>
  </data>
</odoo>
